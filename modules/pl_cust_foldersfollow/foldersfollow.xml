<tryton>
  <data>

    <record model="ir.ui.view" id="tasks_view_form">
      <field name="model">pl_cust_foldersfollow.tasks</field>
      <field name="type">form</field>
      <field name="name">tasks_form</field>
    </record>
    <record model="ir.ui.view" id="sheettask_view_tree">
      <field name="model">pl_cust_foldersfollow.tasks</field>
      <field name="type">tree</field>
      <field name="name">tasks_tree</field>
    </record>
    <record model="ir.action.act_window" id="act_tasks_form">
      <field name="name">Gestion des TÃ¢ches</field>
      <field name="res_model">pl_cust_foldersfollow.tasks</field>
    </record>

    <record model="ir.ui.view" id="foldersfollowtasks_view_form">
      <field name="model">pl_cust_foldersfollow.foldersfollowtasks</field>
      <field name="type">form</field>
      <field name="name">foldersfollowtasks_form</field>
    </record>
    <record model="ir.ui.view" id="foldersfollowtasks_view_tree">
      <field name="model">pl_cust_foldersfollow.foldersfollowtasks</field>
      <field name="type">tree</field>
      <field name="name">foldersfollowtasks_tree</field>
    </record>

    <record model="ir.ui.view" id="foldersfollow_view_form">
      <field name="model">pl_cust_foldersfollow.foldersfollow</field>
      <field name="type">form</field>
      <field name="name">foldersfollow_form</field>
    </record>
    <record model="ir.ui.view" id="foldersfollow_view_tree">
      <field name="model">pl_cust_foldersfollow.foldersfollow</field>
      <field name="type">tree</field>
      <field name="name">foldersfollow_tree</field>
    </record>

    <record model="ir.action.act_window" id="act_folders_form">
      <field name="name">Tous les dossiers</field>
      <field name="res_model">pl_cust_foldersfollow.foldersfollow</field>
    </record>

    <record model="ir.action.act_window" id="act_foldersfollowtasks_form">
      <field name="name">Follow Tasks</field>
      <field name="res_model">pl_cust_foldersfollow.foldersfollowtasks</field>
    </record>

    <record model="ir.action.act_window" id="my_act_foldersfollowtasks_form">
      <field name="name">My Follow Tasks</field>
      <field name="res_model">pl_cust_foldersfollow.foldersfollowtasks</field>
      <field name="domain" eval="[('resp_id', '=', Get(Eval('context', {}), 'employee' , 0))]" pyson="1" />
    </record>
    <record model="ir.action.act_window.domain" id="my_act_foldersfollowtasks_form_today">
      <field name="name">Aujourd'hui</field>
      <field name="sequence" eval="11"/>
      <field name="domain" eval="[('date', '=', Date())]" pyson="1"/>
      <field name="count" eval="True"/>
      <field name="act_window" ref="my_act_foldersfollowtasks_form"/>
    </record>
    <record model="ir.action.act_window.domain" id="my_act_foldersfollowtasks_form_yesterday">
      <field name="name">Hier</field>
      <field name="sequence" eval="12"/>
      <field name="domain" eval="[('date', '=', Date(delta_days=-1))]" pyson="1"/>
      <field name="count" eval="True"/>
      <field name="act_window" ref="my_act_foldersfollowtasks_form"/>
    </record>
    <record model="ir.action.act_window.domain" id="my_act_foldersfollowtasks_form_all">
      <field name="name">Tous</field>
      <field name="sequence" eval="13"/>
      <field name="domain" eval="[]" pyson="1"/>
      <field name="count" eval="False"/>
      <field name="act_window" ref="my_act_foldersfollowtasks_form"/>
    </record>

    <record model="ir.action.act_window" id="act_foldertype_form">
      <field name="name">Folder Types</field>
      <field name="res_model">pl_cust_foldersfollow.foldersfollowtype</field>
    </record>

    <menuitem name="Folders" parent="pl_cust_plbase.menu_start" sequence="10" id="menu_folders" icon="tryton-party"/>
    <menuitem name="Configuration" parent="menu_folders" sequence="100" id="menu_configuration" icon="tryton-party"/>

    <menuitem action="act_folders_form" parent="menu_folders" sequence="10" id="menu_folders_form"/>
    <menuitem action="act_foldersfollowtasks_form" parent="menu_folders" sequence="12" id="menu_foldersfollowtasks_form"/>
    <menuitem action="my_act_foldersfollowtasks_form" parent="menu_folders" sequence="11" id="menu_myfoldersfollowtasks_form"/>

    <menuitem action="act_foldertype_form" parent="menu_configuration" sequence="15" id="my_menu_foldertype_form"/>
    <menuitem action="act_tasks_form" parent="menu_configuration" sequence="15" id="menu_tasks_form"/>

    <!-- <record model="ir.ui.menu-res.group" id="menu_folders_group_admin">
      <field name="menu" ref="menu_folders"/>
      <field name="group" ref="group_folder_admin"/>
    </record>

    <record model="ir.ui.menu-res.group" id="menu_folders_group_viewer">
      <field name="menu" ref="menu_folders"/>
      <field name="group" ref="group_folder_viewer"/>
    </record> -->

  </data>
</tryton>
